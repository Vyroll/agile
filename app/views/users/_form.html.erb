<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(user) do |f| %>
        <div class="form-group">
          <%= f.label 'Kraj' %>
          <%= f.text_field :country, class:'form-control', placeholder: 'podaj nazwę kraju' %>
        </div>
        <div class="form-group">
          <%= f.label 'Miasto' %>
          <%= f.text_field :city, class:'form-control', placeholder: 'podaj nazwę miasta' %>
        </div>
        <div class="form-group">
          <%= f.label 'Adres Pocztowy' %>
          <%= f.text_field :postal_code, class:'form-control', placeholder: 'podaj adres pocztowy' %>
        </div>
        <div class="form-group">
          <%= f.label 'Ulica' %>
          <%= f.text_field :street, class:'form-control', placeholder: 'podaj nazwę ulicy' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Zapisz', class:'btn btn-primary btn-block' %>
        </div>
    <% end %>
  </div>
</div>
