<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for order do |f| %>


        <div class="form-group">
          <%= f.label 'Nazwa' %>
          <%= f.collection_select :order_status_id, OrderStatus.all, :id, :name,{}, {class:'form-control'} %>
        </div>

        <div class="form-group">
          <%= f.submit 'Zmień Zamówienie', class:'btn btn-primary btn-block'%>
        </div>
    <% end %>
  </div>
</div>
