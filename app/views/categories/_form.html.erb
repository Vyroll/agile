<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(category) do |f| %>
        <div class="form-group">
            <%= f.label 'Nazwa' %>
            <%= f.text_field :name, class:'form-control', placeholder: 'podaj nazwę kategorii' %>
        </div>
        <div class="form-group">
            <%= f.submit 'Stwórz Kategorię', class:'btn btn-primary btn-block' %>
        </div>
    <% end %>
  </div>
</div>
