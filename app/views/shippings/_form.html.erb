<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(shipping) do |f| %>

        <div class="form-group">
          <%= f.label 'Nazwa' %>
          <%= f.text_field :name, class:'form-control', placeholder: 'podaj nazwę dostawy' %>
        </div>

        <div class="form-group">
          <%= f.label 'Cena' %>
          <%= f.number_field :price, class:'form-control', placeholder: 'podaj cenę za dostawę' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Stwórz Rodzaj Dostawy', class:'btn btn-primary btn-block' %>
        </div>
    <% end %>
  </div>
</div>
