<div class="row">
  <div class="col-md-4 col-md-offset-4 main-login main-center">
    <h2>Zarejestruj</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'podaj email' %>
        </div>

        <div class="form-group">
          <%= f.label 'Hasło' %>
          <% if @minimum_password_length %>
              <em>(minimum <%= @minimum_password_length %> znaków)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:'podaj hasło' %>
        </div>

        <div class="form-group">
          <%= f.label 'Potwierdź Hasło' %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control', placeholder:'potwierdź hasło' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Zarejestruj', class:'btn btn-primary btn-lg btn-block login-button' %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>