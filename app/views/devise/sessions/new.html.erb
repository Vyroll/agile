<div class="row">
  <div class="col-md-4 col-md-offset-4 main-login main-center">
  <h2>Zaloguj</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class:'control-label' %>

        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
          <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'Podaj Email' %>
        </div>

    </div>

    <div class="form-group">
      <%= f.label 'Hasło', class:'control-label' %>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
          <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:'Podaj Hasło' %>
        </div>
    </div>

    <div class="form-group">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label 'Zapamiętaj' %>
      <% end -%>
      <%= f.submit 'Zaloguj', class:'btn btn-primary btn-lg btn-block login-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>

</div>