<div class="row">
  <div class="col-md-4 col-md-offset-4 main-login main-center">
    <h2>Zmień hasło</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, 'Hasło' %>
        <% if @minimum_password_length %>
          <em>(minimum <%= @minimum_password_length %> znaków)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class:'form-control', placeholder:'podaj hasło' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Potwierdź hasło' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control', placeholder:'potwierdź hasło' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Zmień hasło', class:'btn btn-primary btn-lg btn-block login-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
