<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(product) do |f| %>

        <div class="form-group">
          <%= f.label 'Nazwa' %>
          <%= f.text_field :name, class:'form-control', placeholder: 'podaj nazwę produktu' %>
        </div>

        <div class="form-group">
          <%= f.label 'Opis' %>
          <%= f.text_area :description, class:'form-control', placeholder: 'podaj opis produktu' %>
        </div>

        <div class="form-group">
          <%= f.label 'Ilość produktów w magazynie' %>
          <%= f.number_field :stock, class:'form-control', placeholder: 'podaj ilość produktów w magazynie' %>
        </div>

        <div class="form-group">
          <%= f.label 'Kategoria' %>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: 'form-control'}) %>
        </div>

        <div class="form-group">
          <%= f.label 'Platforma' %>
          <%= f.collection_select(:platform_id, Platform.all, :id, :name, {}, {class: 'form-control'}) %>
        </div>

        <div class="form-group">
          <%= f.label 'Cena' %>
          <%= f.number_field :price, class:'form-control', step: "0.01", placeholder: 'podaj cenę' %>
        </div>

        <div class="form-group">
          <%= f.label 'Obniżka(%)' %>
          <%= f.number_field :discount, class:'form-control', step: "1", min: 0, max:100, placeholder: 'podaj wysokość obniżki w %' %>
        </div>

        <div class="form-group">
          <%= f.label 'Obraz' %>
          <%= f.file_field :picture, multiple: true %>
        </div>

        <div class="form-group">
          <%= f.submit 'Zapisz', class:'btn btn-primary btn-block' %>
        </div>
    <% end %>
  </div>
</div>
